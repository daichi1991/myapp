
  <% if current_user != artist.user%>
      <span class="follow">
      <% if artist.follow?(current_user) %>
        <%= form_for(artist.follows.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
          <%= button_tag(class: "btn btn-light") do %>
            <i class="fas fa-user-check"></i>
            フォロー中
          <% end %>
        <% end %>
      <% else %>
        <%= form_for(artist.follows.build, remote: true) do |f| %>
          <div><%= hidden_field_tag :artist_id, artist.id %></div>
          <%= button_tag(class: "btn btn-info") do %>
            <i class="fas fa-user-plus"></i>
            フォローする
          <% end %>
        <% end %>
      <% end %>
    </span>
  <% end %>
