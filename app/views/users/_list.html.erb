<div class="row">
  <div class="col-xs-3">
    <%= link_to user_path(user.id) do %>
      <% unless user.image.blank? %>
        <%= image_tag user.image.to_s, class:"user-image" %>
      <% else %>
        <%= image_tag 'default_user.jpeg', class:"user-image" %>
      <% end %>
    <% end %>
  </div>

  <div class="col-xs-5">
    <%= link_to user_path(user.id) do %>
      <%= user.username %>
    <% end %>
    <% if user.artist.present? %>
      <% if user.artist.status == true %>
        <span class="badge badge-info">
          アーティスト
        </span><br>
        <%=user.artist.description %>
      <% end %>
    <% end %>
  </div>
  <div class="col-xs-4">
        <% if user.artist.present? %>
          <% if user.artist.status == true %>
            <div class="row">
              <div class="col-xs-6">
                <%if @artist.user != current_user %>
                  <div class="user-list-btn">
                    <span id="follow-of-<%= user.artist.id %>">
                      <%= render "follows/follow", artist: @artist %>
                    </span>
                  </div>
                <% end %>
              </div>
              <div class="col-xs-6">
                <div class="user-list-btn">
                  <%= link_to artist_path(user.artist.id), class:"btn btn-light" do %>
                    <i class="fas fa-music"></i>
                    チャンネルへ
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
  </div>
</div>
